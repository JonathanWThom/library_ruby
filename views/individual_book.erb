<h2><%= @book.title() %></h2>

<% if @book.authors().any?() %>

  <h3>Here are all the authors credited:</h3>

  <ul>
    <% @book.authors().each() do |author| %>
      <li><%= author.name() %></li>
    <% end %>
  </ul>
<% else %>
  <p>There are no authors yet! <a href="/">Add other authors here</a></p>
<% end %>

<h3>Select all the authors of the book:</h3>

<% if @authors.any?() %>
  <form action="/books/<%= @book.id %>" method="post">
    <input type="hidden" name="_method" value="patch">
    <% @authors.each() do |author| %>
    <div class="checkbox">
      <label>
        <input type="checkbox" name="author_ids[]" value="<%= author.id()%>"><%= author.name() %>
      </label>
    </div>
    <% end %>
    <button type="submit" class="btn btn-success">Add Authors</button>
  </form>
<% end %>



<a href="/">Return to Homepage</a>
