<h1>Welcome to the Library of Your Dreams</h1>

<div class="row">
  <h3>Admin Only <a href="/patron">Click Here for Patron Access</a></h3>
  <div class="col-md-6">
    <form action="/add_book" method="post">
      <h4>Add a book</h4>
      <div class="form-group">
        <input id="add_title" name="add_title" placeholder="Title">
      </div>
      <button type="submit" class="btn btn-info">Add Book</button>
    </form>
  </div>
  <div class="col-md-6">
    <form action="/add_author" method="post">
      <h4>Add an author</h4>
      <div class="form-group">
        <input id="name" name="name" placeholder="Name">
      </div>
      <button type="submit" class="btn btn-info">Add Author</button>
    </form>
  </div>
</div>

<div class="row">
  <div class="col-md-6">
    <form action="/search_book" method="post">
      <h3>Search for a book</h3>
      <div class="form-group">
        <input id="title" name="title" placeholder="Title">
      </div>
      <button type="submit" class="btn btn-info">Search</button>
    </form>
  </div>
  <div class="col-md-6">
    <form action="/search_author" method="post">
      <h3>Search for an author</h3>
      <div class="form-group">
        <input id="author" name="author" placeholder="Author">
      </div>
      <button type="submit" class="btn btn-info">Search</button>
    </form>
  </div>
</div>

<div class="row">
  <div class="col-md-6">
    <h3>All Books</h3>
    <ul>
      <% @books.each() do |book| %>
      <li><a href="/books/<%=book.id() %>"> <%= book.title() %></a></li>
      <% end %>
    </ul>
  </div>
  <div class="col-md-6">
    <% if @books.any?() %>
    <h3>Delete Books</h3>
    <form action="/delete_book" method="post">
      <label for="book_id">Select a Book:</label>
      <br>
      <select id='book_id' name='book_id' type='text'>
        <% @books.each() do |book| %>
          <option value="<%= book.id()%>"> <%= book.title() %> </option>
        <% end %>
      </select>
      <br>
      <input name="_method" type="hidden" value="delete">
      <button type="submit" class="btn btn-danger">Delete Book</button>
    </form>
    <% end %>
  </div>
</div>
